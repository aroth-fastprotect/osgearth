#ifndef OSGEARTHFEATURES_FEATURENODE_H
#define OSGEARTHFEATURES_FEATURENODE_H 1

#include <osgEarthFeatures/Common>
#include <osgEarthFeatures/Feature>
#include <osg/MatrixTransform>
#include <osg/ref_ptr>

namespace osg {
	class Drawable;
}

namespace osgEarth { namespace Features
{
	class FeatureSource;
	class OSGEARTHFEATURES_EXPORT FeatureNode : public osg::MatrixTransform
	{
	public:
		FeatureNode(FeatureSource * featureSource=NULL, FeatureID fid=-1);

		FeatureSource * getSource() const { return _featureSource; }
		FeatureID getFID() const { return _fid; }
	private:
		FeatureSource * _featureSource;
		FeatureID _fid;
	};

	class OSGEARTHFEATURES_EXPORT FeatureMultiNode : public FeatureNode
	{
	public:
		FeatureMultiNode(FeatureSource * featureSource=NULL);
	public:
		void		addDrawable(osg::Drawable * drawable, FeatureID fid);
		FeatureID getFID(osg::Drawable * drawable) const;
	private:
		typedef std::map< osg::ref_ptr<osg::Drawable>, FeatureID > DrawableFeatureIDMap;
		DrawableFeatureIDMap _features;
	};

} } // namespace osgEarth::Features

#endif // OSGEARTHFEATURES_FEATURENODE_H
